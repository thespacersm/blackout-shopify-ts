<div data-section-id="{{ section.id }}" data-section-type="section-banner-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v5">
    <div class="{% if section.settings.ena_container %} container container-v2 {% endif %}">
      <div class="row no-gutters align-items-center"  style="background-color:{{section.settings.bg_banner}}"> 
        <div class=" col-banner-6 {% if section.settings.select_pos =='left' %} order-lg-1 content-left {% elsif section.settings.select_pos == 'right'%} order-lg-2 content-right {% endif %}">
          <div class="box-img1 img-left" style="background-color:{{section.settings.bg_banner}}">
            <div class="banner-content">      
              <div class="info">
                {% if section.settings.subtitle_top != blank %}
                <div class="sub_top_12">{{section.settings.subtitle_top}}</div>
                {% endif %}
                {% if section.settings.title_banner != blank %}
                <h3 class="title-banner">{{section.settings.title_banner}}</h3>
                {% endif %}
                {% if section.settings.sub_title_banner != blank %}
                <p class="sub-title">{{section.settings.sub_title_banner}}</p>
                {% endif %}

                {% if section.settings.button_banner != blank %}
                <a href="{{section.settings.url_banner}}" class="button-main2">{{section.settings.button_banner}}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        <div class=" col-banner-4 {% if section.settings.select_pos =='left' %} order-lg-2  {% elsif section.settings.select_pos == 'right'%} order-lg-1 {% endif %}">
          <div class="box-img img-right">
            <a href="{{section.settings.url_banner}}">
              {% if section.settings.img_banner_right != blank %}
              <img data-src="{{section.settings.img_banner_right | img_url : 'master'}}" class="lazyload img-fluid w-100" alt >
              {% else %}
              <img data-src="//via.placeholder.com/991x680" class="lazyload img-fluid w-100" alt>
              {% endif %}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
"name": "BANNER V5",
"settings": [
	{
      "type": "header",
      "content": "Setting Banner 5"
    },
	{
      "type": "checkbox",
      "id": "ena_container",
      "label": "Enable Add Container Box",
      "default": false
    },
    {
      "type": "select",
      "id": "select_pos",
      "label": "Select Position Content",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Background Color Banner"
    },
    {
      "type": "color",
      "id": "bg_banner",
      "label": "Backgorund Color",
      "default": "#F8F9E4"
    },
    {
      "type": "header",
      "content": "Settings Banner Content"
    },
	{
      "type": "text",
      "id": "subtitle_top",
      "label": "SubTitle Top",
      "default": "New arrival"
    },
    {
      "type": "text",
      "id": "title_banner",
      "label": "Title Banner",
      "default": "Country of Origin and <br> Certification"
    },
    {
      "type": "text",
      "id": "sub_title_banner",
      "label": "Sub Title Banner",
      "default": "The vast majority of Fruits and Vegetables <br> are Organic and may vary in size. "
    },
    {
      "type": "text",
      "id": "button_banner",
      "label": "Button Label",
      "default": "See more"
    },
    {
      "type": "url",
      "id": "url_banner",
      "label": "URL Button ",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Settings Banner Image"
    },
    {
      "type": "image_picker",
      "id": "img_banner_right",
      "label": "Image Banner",
      "info": "991 x 680px recommended"
    },
	{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "BANNER V5",
      "category": "HOME"
    }
  ]
}
