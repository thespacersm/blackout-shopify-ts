<div data-section-id="{{ section.id }}" data-section-type="section-banner-v6" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v6">
    <div class="container container-v2">
      <div class="banner-box">
        <div class="box-img">
          <a href="{{section.settings.url_btn}}">
            {% if section.settings.img_banner1 != blank %}
            <img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid w-100">
            {% else %}
            <img src="//via.placeholder.com/1420x340" class="img-fluid w-100" alt="banner">
            {% endif %}
          </a>
        </div>

        <div class="banner-info">
          {% if section.settings.subtitle_banner != blank %}
          <div class="subtitle">{{section.settings.subtitle_banner}}</div>
          {% endif %}
          {% if section.settings.title_banner != blank %}
          <h3 class="title">{{section.settings.title_banner}}</h3>
          {% endif %}
          {% if section.settings.btn_banner != blank %}
          <a href="{{section.settings.url_btn}}" class="button-main2">{{section.settings.btn_banner}}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "BANNER V6",
  "settings": [
	{
      "type": "header",
      "content": "Setting Banner 6"
    },
    {
      "type": "image_picker",
      "id": "img_banner1",
      "label": "Backgroud Image",
      "info": "1420 x 340px recommended"
    },
	{
      "type": "text",
      "id": "subtitle_banner",
      "label": "Sub Title",
	  "default": "Start from <span>$39.99</span>"
    },
    {
      "type": "text",
      "id": "title_banner",
      "label": "Title banner",
      "default": "Organic Food up to 20% off"
    },
    {
      "type": "text",
      "id": "btn_banner",
      "label": "Button Label",
      "default": "Shop now"
    },
	 {
      "type": "url",
      "id": "url_btn",
      "label": "URL",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "BANNER V6",
      "category": "HOME"
    }
  ]
}
{% endschema %}

