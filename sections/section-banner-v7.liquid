<div data-section-id="{{ section.id }}" data-section-type="section-banner-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v7">
    <div class="container container-full p-0">
      <div class="banner-box">
        <div class="box-image">
          {% if section.settings.img_banner1 != blank %}
          <img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid w-100">
          {% else %}
          <img src="//via.placeholder.com/1920x660" class="img-fluid w-100" alt="banner">
          {% endif %}
        </div>

        <div class="banner-info">
          <div class="banner-wrap">
            <div class="banner_border">
              {% if section.settings.subtitle != blank %}
              <div class="sub_top_12">{{section.settings.subtitle}}</div>
              {% endif %}
              {% if section.settings.title_banner != blank %}
              <h3 class="title">{{section.settings.title_banner}}</h3>
              {% endif %}
              {% if section.settings.content_banner != blank %}
              <div class="content">{{section.settings.content_banner}}</div>
              {% endif %}

              <div class="banner-button">
                {% if section.settings.btn_banner != blank %}
                <a href="{{section.settings.url_btn}}" class="button-main2">{{section.settings.btn_banner}}</a>
                {% endif %}
                {% if section.settings.btn_banner_2 != blank %}
                <a href="{{section.settings.url_btn_2}}" class="button-main3">{{section.settings.btn_banner_2}}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "BANNER V7",
  "settings": [
	{
      "type": "header",
      "content": "Settings Banner"
    },
    {
      "type": "image_picker",
      "id": "img_banner1",
      "label": "Backgroud Image",
      "info": "1920 x 660px recommended"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sub Title",
      "default": "Up to 15% off"
    },
    {
      "type": "text",
      "id": "title_banner",
      "label": "Title",
      "default": "Tropical & Exotic"
    },
	{
      "type": "text",
      "id": "content_banner",
      "label": "Content",
      "default": "Enjoy this amazing assortment of fresh spring Tropical and Exotic"
    },
    {
      "type": "text",
      "id": "btn_banner",
      "label": "Button Label 1",
      "default": "SHOP NOW"
    },
	{
      "type": "url",
      "id": "url_btn",
      "label": "URL banner",
      "default": "/collections/all"
    },
	{
      "type": "text",
      "id": "btn_banner_2",
      "label": "Button Label 2",
      "default": "View detail"
    },
	{
      "type": "url",
      "id": "url_btn_2",
      "label": "URL banner",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "BANNER V7",
      "category": "HOME"
    }
  ]
}
{% endschema %}

