<div data-section-id="{{ section.id }}" data-section-type="section-countdown-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-countdown-v2" >
    <div class="container container-v2">
      <div class="row no-gutters align-items-center justify-content-end" {% if section.settings.bg_section != blank %}style="background:{{section.settings.bg_section}}" {% endif %}>
        <div class="col-lg-6 countdownt-left">
          <div class="box-image">
            {% if section.settings.img_banner1 != blank %}
            <img data-src="{{section.settings.img_banner1 | img_url:'master'}}" class="lazyload img-fluid w-100" alt="_img_banner">
            {% else %}
            <img data-src="//via.placeholder.com/712x657" class="lazyload img-fluid w-100" alt="_img_banner">
            {% endif %}
          </div>
        </div>
        <div class="col-lg-6">
          <div class="box-info-content">
            <div class=" content-section">
              <div class=" info-deal">
                {% if section.settings.deal-to != blank %}
                <div class="sub_top_12">{{section.settings.deal-to}}</div>
                {% endif %}
                {% if section.settings.title-deal != blank %}
                <h2 class="title-deal">{{section.settings.title-deal}}</h2>
                {% endif %}
                {% if section.settings.content_co != blank %}
                <div class="desc">{{section.settings.content_co}}</div>
                {% endif %}
              </div>

              <div class="countdown-timer">
                {% if section.settings.countdown-date != blank %}
                <ul class="mb-0" data-countdown="countdown-v2" data-date="{{section.settings.countdown-date}}">
                </ul>
                {% else %}
                <ul class="mb-0" data-countdown="" data-date="2022-12-12-12-12-12"><li><span id="days"><b>238</b></span>Days</li><li><span id="hours"><b>11</b></span>Hrs</li><li><span id="minutes"><b>58</b></span>Mins</li><li><span id="seconds"><b>52</b></span>Sec</li></ul>
                {% endif %}
              </div>

              {% if section.settings.buttom_banner != blank %}
              <div class="div-button"><a class="button-main2" href="{{section.settings.button_banner_url}}">{{section.settings.buttom_banner}}</a></div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
