      "default": "Best deal"
    },
	{
      "type": "text",
      "id": "title-deal",
      "label": "Title",
      "default": "Save on Sets"
    },
    {
      "type": "text",
      "id": "content_co",
      "label": "Content",
      "default": "With over  300 differrent fruits on the planet were certain you haven't tries them all. Each week we aim ti tantalise you"
    },	
    {
      "type": "header",
      "content": "Countdown Date"
    },
    {
      "type": "text",
      "id": "countdown-date",
      "label": "Enter the date you want",
      "info": "Format: Year-Month-Day-Hour-Minute-Second"
    },
    {
      "type": "text",
      "id": "buttom_banner",
      "label": "Button name",
