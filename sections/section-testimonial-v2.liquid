<div data-section-id="{{ section.id }}" data-section-type="section-testimonial-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-testimonial-v2">
    <div class="container container-v2">
      <div class="text-center title_block"> 
        {% if section.settings.section_title != blank %}
        <h3>{{section.settings.section_title}}</h3>      
        {% endif %}
        {% if section.settings.desc_content != blank %}
        <p class="desc">{{section.settings.desc_content}}</p>
        {% endif %}
      </div>
      
      <div class="js-testimonial-v2">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "testimonial" %}
        <div class="">
          <div class="testimonial-inner">
            <div class="testimonial-info">
              <span class="engoc-star star-5"></span>
              <h4 class="title">{{block.settings.block_title}}</h4>
              <div class="content">{{block.settings.block_content}}</div> 
              <div class="testimonial-image">
                <div class="avatar ">
                  {% if block.settings.block_img != blank %}
                  <img width="69" height="69" data-src="{{block.settings.block_img|img_url:'master'}}" class="lazyload img-responsive" alt="testimonial">
                  {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="author-info">
                  <h3>{{block.settings.block_name}}</h3>
                  <p class="text-position" >{{block.settings.block_des}}</p>
                </div>
              </div>
            </div>            
          </div>
        </div>
        {% endif %}
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .section-testimonial-v2{
    {% if section.settings.display_bg == "bg_img" %}
    {% if section.settings.img_banner != blank %}background-image : url({{section.settings.img_banner|img_url : 'master'}}); {% else %}background-image : url(//via.placeholder.com/1920x1080);{% endif %}
      {% elsif section.settings.display_bg =="bg_color" %}
      {% if section.settings.bg_color != blank %}background : {{section.settings.bg_color}} {% else %}background: none {% endif %}
      {% endif %}
  }
</style>


