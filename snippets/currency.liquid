{% if settings.title-change-currency != blank %}
<div class="title">
  {{settings.title-change-currency}}
</div>
{% endif %}

<div class="content-wrapper">
  <a class="currency" data-toggle="collapse" href="#currencies" >
    <span class="selected-currency">{{settings.default_currency}}</span>  
  </a>
  <ul class="collapse list-unstyled" id="currencies">
    {% assign supported = settings.supported_currencies | split: ' ' %}
    {% for c in supported %}
    <li><a data-currency="{{c}}">{{c}}</a></li>
    {% endfor %}
  </ul>
</div>