{% if section.settings.select_fts == "footer_v1" %}
{% if template contains 'index' %}
<footer class="footer_v1" >
  <div class="top-footer">
    <div class="container container-v1">    
      <div class="row">
        <div class="col-lg-4 col-md-6">
          <div class="info_footer end">
            <div class="logo-top">
              {% if settings.logo_svg1 !=blank %}
              <div class="logosvg" style="max-width:{{settings.fv1_main_logo_maxwidth}}px;">
                <a class="d-block" href="{{shop.url}}">{{settings.logo_svg1}}</a>
              </div>          
              {% else %}            
              <a href="{{shop.url}}" class="logo">
                {% if settings.fv1_main_logo != blank %}
                <img src="{{settings.fv1_main_logo | img_url:'master'}}"  width="{{settings.fv1_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
                {% else %}
                <img src="//via.placeholder.com/145x62" width="{{settings.fv1_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
                {% endif %}
              </a>
              {% endif %}
            </div>
            
            <div class="content_footer">
              {% if settings.content_colum_fv1_1 != blank  %}
              {{settings.content_colum_fv1_1}}
              {% else %}
              <ul class="list-unstyled mb-0">
                <li class="address"><span>121 King Street, Collins Melbourne <br> West Victoria 8007, Australia</span></li>
                <li class="phone"><span>Phone:</span><a href="tel:(+01) 234-567-89"> (+01) 234-567-89</a></li>
                <li class="mail"><span>Email:</span><a href="mailto:support@mycompany.com"> support@mycompany.com</a></li>
              </ul>
              {% endif %}
            </div>

          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-menu">
          <div class="info_footer">
            <div class="title_footer">          
              <h4 >{{settings.titlecolum_fv1_1}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv1_1].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-menu">
          <div class="info_footer">
            <div class="title_footer">          
              <h4>{{settings.titlecolum_fv1_2}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv1_2].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-2 col-md-6 col-menu">
          <div class="info_footer">
            <div class="title_footer">          
              <h4>{{settings.titlecolum_fv1_3}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv1_3].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
      </div>
    </div>
  </div>
  {% if settings.enable_fv1_bottom %}
  <div class="copyright">
    <div class="container container-v1">
      <div class="row align-items-center">
        <div class="col-lg-6 col-md-6 {% if settings.enable_rtl_mode %} text-md-right {% else %} text-md-left{% endif %} text-center">
          {% if settings.fv1_bottom_copyright != blank %}
          <p class="text-copyright mb-0">{{settings.fv1_bottom_copyright}}</p>
          {% else %}
          <p>© Copyright 2022 | <a href="https://shopilaunch.com/" rel="nofollow" target="_blank" class="underline_hover bold">  Mikadu </a> By <a href="https://shopilaunch.com/" rel="nofollow" target="_blank" class="underline_hover"> ShopiLaunch.</a><a href="https://www.shopify.com/?ref=shopifycenter" rel="nofollow" target="_blank" class=""> Powered by Shopify.</a></p> 
          {% endif %}
        </div>
        <div class="col-lg-6 col-md-6 {% if settings.enable_rtl_mode %}text-md-left {% else %}text-md-right {% endif %}text-center">
          {% if settings.fv1_bottom_payment_img != blank %}
          <img src="{{settings.fv1_bottom_payment_img | img_url:'master'}}"  alt="">
          {% else %}
          <img src="//via.placeholder.com/310x32"  alt="">
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}
</footer>
<style>
  .footer_v1 .top-footer{
    background : {{section.settings.ft_home_bg_footer}};
  }
  .footer_v1 .copyright{
    background : {{section.settings.ft_home_bg_footer}};
  }
  .footer_v1 .top-footer .info_footer h4{
    color : {{section.settings.ft_home_color_heading}};
  }
  .footer_v1 .top-footer .col-menu ul li a{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v1 .top-footer .info_footer .content_footer{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v1 .copyright p{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v1 .copyright p a {
    color : {{section.settings.ft_home_color_text}};
  }
</style>
{% endif %}
{% endif %}

