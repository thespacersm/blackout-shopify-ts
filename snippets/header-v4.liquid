{% if section.settings.select_hds == "header_v4" %}
{% if template contains 'index' %}
<header id="header" class="header-v4-h4 js_height_hd jsheader_sticky d-none d-xl-block {% if section.settings.hd_home_enable_transparents %}header-absolute {% endif %}">
  {% if settings.enable_topbar_v4 %}
  <div id="bwp-topbar" class="topbar-v1" {% if settings.bg_topbar_v4 !=blank %}style="background :{{settings.bg_topbar_v4}}" {% endif %}>
    <div class="topbar-inner">
      <div class="container container-v1">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6 topbar-left {% if settings.enable_rtl_mode %} text-lg-right {% else %}text-lg-left{% endif %}">
            <div class="text-content">
              {% if settings.text_v4 !=blank %}
              <div class="content">{{settings.text_v4}}</div>
              {% endif %}
            </div>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6 topbar-right {% if settings.enable_rtl_mode %}text-lg-left {% else %}text-lg-right{% endif %}">
            <div class="menu-currency-language">
              {% if settings.enable_currency_t4 %}
              <div class="menu-currency-wrap">
                {% include 'currency' %}
              </div>
              {% endif %}
              {% if settings.enable_multi_lang_t4 %}
              <div class="menu-language-wrap">
                {% include 'change-language' %}
              </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  
  <div class="header-wrapper">
    <div class="container container-v1">
      <div class="row align-items-center">
        <div class="col-lg-2">
          <div class="logo">
            <div class="center logo delay05">           
              {% if section.settings.hd_home_logo_svg !=blank %}
              <div class="logosvg" style="max-width:{{section.settings.hd_home_logo_maxwidth}}px;">
                <a class="logourl" href="{{shop.url}}">{{section.settings.hd_home_logo_svg}}</a>
              </div>
              {% else %}            
              <a href="{{shop.url}}">
                {% if section.settings.hd_home_logo != blank %}
                <img src="{{section.settings.hd_home_logo|img_url:'master'}}" width="{{section.settings.hd_home_logo_maxwidth}}" alt="{{shop.name}}">
                {% else %}
                <img src="//via.placeholder.com/160x46" width="{{section.settings.hd_home_logo_maxwidth}}" alt="{{shop.name}}">
                {% endif %}
              </a>
              {% endif %}          
            </div>
          </div>
        </div>      
        <div class="col-lg-8 d-flex justify-content-center">
          <div class="header-search-form">
            <form class="wg-search-form" action="/search">
              <div class="search-box">
                <button id="searchsubmit2" type="submit" class="btn_search">   
                  {% if section.settings.hd_icon_search_svg != blank %}
                  {{section.settings.hd_icon_search_svg}}
                  {% else %}
                  <i class="{{section.settings.hd_icon_search}}"></i>
                  {% endif %}
                </button>   

                <input type="text" name="q" placeholder="{{ 'general.search.submit' | t }}" class="search-input js_engo_autocomplate">
                <div class="result_prod js_productSearchResults">
                  <div class="js_search_results row">

                  </div>
                </div>   
              </div>
              <input type="hidden" name="type" value="product">
            </form>
          </div>
        </div>
        <div class="col-lg-2 currencies-login">        
          <div class="cart-login-search align-items-center"> 
            <ul class="list-inline list-unstyled mb-0">
              <li class="list-inline-item mr-0">
                <a href="{% if customer %}/account {% else %}javascript:void(0){% endif %}" class="login {% if customer %}{% else %}js-call-popup-login{% endif %}">
                  {% if section.settings.hd_icon_login_svg != blank %}
                  {{section.settings.hd_icon_login_svg}}
                  {% else %}
                  <i class="{{section.settings.hd_icon_login}}"></i>
                  {% endif %}

                </a>
              </li>
              <li class="list-inline-item mr-0">
                <a href="{{section.section.settings.url_wishlist}}" class="">
                  {% if section.settings.hd_icon_wishlist_svg != blank %}
                  {{section.settings.hd_icon_wishlist_svg}}
                  {% else %}
                  <i class="{{section.settings.hd_icon_wishlist}}"></i>
                  {% endif %}

                </a>
              </li>
              <li class="list-inline-item mr-0">
                <a href="javascript:void(0)" class="cart js-call-minicart">
                  {% if section.settings.hd_icon_cart_svg != blank %}
                  {{section.settings.hd_icon_cart_svg}}
                  {% else %}
                  <i class="{{section.settings.hd_icon_cart}}"></i>
                  {% endif %}
                  <span class="count_pr_incart js-number-cart number-cart">{% if cart.item_count > 0 %} {{cart.item_count}} {% else %} 0 {% endif %}</span>
                </a>
              </li>
            </ul>

          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="header-bottom">
    <div class="container container-v1">
      <div class="row align-items-center">
        <div class="col-lg-6 col-md-6 col-sm-6 {% if settings.enable_rtl_mode %} text-lg-right {% else %}text-lg-left{% endif %}">
          <div class="menu {% if settings.enable_rtl_mode %}right {% else %}left{% endif %}">
            {% include 'eveland-menu' %}
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 {% if settings.enable_rtl_mode %}text-lg-left {% else %}text-lg-right{% endif %}">
          <div class="list-phone right">
            {{settings.text_phone_v4}}
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<script>
  jQuery(document).ready(function($) {
    
    function hexToRgb(hex) {
      var result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
      return result ? {
        r: parseInt(result[1], 16),
        g: parseInt(result[2], 16),
        b: parseInt(result[3], 16)
      } : null;
    }
    var r = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").r);
    var g = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").g);
    var b = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").b)
    {% if section.settings.hd_home_enable_transparents %}
    {% else %}                  
    $('.header-v4-h4').css({'background':'rgba(' + r + ' ,' + g + ',' + b + ',{{section.settings.hd_bg_header_opacity}})'});
    {% endif %}
    
    {% if section.settings.enable_sticky_hd_home  %}
    function menudestopscroll4() {
      var $nav = $(".jsheader_sticky");
      $nav.removeClass('menu_scroll_v4');

      $(document).scroll(function() {

        $nav.toggleClass('menu_scroll_v4', $(this).scrollTop() > $nav.height());
        var r = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").r);
        var g = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").g);
        var b = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").b)
        $('.header-v4-h4.menu_scroll_v4').css({'background':'rgba(' + r + ' ,' + g + ',' + b + ',{{section.settings.hd_bg_header_opacity}})'});
        {% if section.settings.hd_home_enable_transparents %}                    
        if($(this).scrollTop() < $nav.height()){
          $('.header-v4-h4').css({'background':'none'}); 
            $nav.removeClass('menu_scroll_v4')
        }
        {% endif %}                 
      });
    } 
    menudestopscroll4();
    {% endif %}
    
    
  });
</script>
<style>
  #header .menu ul .nav-item .nav-link{
    color: {{section.settings.hd_home_color_text}};
  }
  #header .currencies-login .cart-login-search ul li a i{
    color: {{section.settings.hd_home_color_text}};
  }  
  #header .topbar-v1 .text-content .content{
    color: {{settings.color_topbar_v4}};
  }
  #header .topbar-v1 .list-icon a{
    color: {{settings.color_topbar_v4}};
    opacity:1;
  }
  .menu-language-wrap .title, .menu-currency-wrap .title{
    color: {{settings.color_topbar_v4}};
    opacity:1;
  }
  #header .menu-currency-wrap .currency .selected-currency, #header .menu-language-wrap .language span{
    color: {{settings.color_topbar_v4}};
  }
  .menu-language-wrap .language:after, .menu-currency-wrap .currency:after{
    color: {{settings.color_topbar_v4}};
  }
</style>
{% endif %}
{% endif %}

